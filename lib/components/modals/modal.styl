json('../../../stylesheets/colors.json')
@import '../../../stylesheets/typography'

@keyframes fadeOverlayIn
  from
    opacity 0
  to
    opacity 0.9

@keyframes fadeOverlayOut
  from
    opacity 0.9
  to
    opacity 0

@keyframes fadeModalIn
  from
    transform scale(1.1, 1.1)
    opacity 0
  to
    transform scale(1, 1)
    opacity 1

@keyframes fadeModalOut
  from
    transform scale(1, 1)
    opacity 1
  to
    transform scale(1.1, 1.1)
    opacity 0

+prefix-classes('mp-modal-')
  .stage
    bottom 0
    box-sizing border-box
    left 0
    pointer-events none
    position fixed
    right 0
    top 0
    z-index 10

    &.closed
      display none

    &.absolute
      &, .backdrop, .wrapper
        position absolute

    .backdrop
      background #45566d
      height 100%
      position fixed
      pointer-events auto
      width 100%
      z-index 1

      &.opening
        animation fadeOverlayIn 300ms forwards
        opacity 0

      &.open
        opacity 0.9

      &.closing
        animation fadeOverlayOut 300ms forwards

      &.closed
        opacity 0

    .wrapper
      display flex
      height 100%
      justify-content center
      align-items center
      pointer-events none
      position fixed
      width 100%
      z-index 2

      .main
        border-radius 6px
        box-shadow 0 1px 3px 0 rgba(1, 1, 1, 0.28)
        max-width 530px
        pointer-events auto
        position relative
        z-index 2

        &.opening
          animation fadeModalIn 300ms forwards 100ms
          opacity 0

        &.open
          opacity 1

        &.closing
          animation fadeModalOut 200ms forwards

        &.closed
          opacity 0

        .close-btn
          cursor pointer
          float right
          height 10px
          position absolute
          right 15px
          top 15px

          .close-icon svg
            width 10px
            path
              fill grey-200

          &:hover
            .close-icon svg path
              fill grey-300

    // keep these styles as general as possible to make them easier to override
    // i.e. don't indent them further
    .top-container
      background #fff
      border-radius 6px 6px 0 0
      padding 30px 60px
      text-align center
      &.alert
        border-radius 6px
        padding 20px 40px 30px

    slot-styles()
      .title
        font-title()
        font-weight 600

      .subtitle
        font-paragraph()
        color grey-700
        margin 12px 0

      .alert-title
        font-title()
        text-align left

      .alert-subtitle
        font-paragraph()
        font-weight normal
        text-align left
        white-space pre-wrap

    // these have to be defined separately because content::content isn't a valid
    // selector on webkit and will cause it to not apply the styles at all
    &
      slot-styles()

    content::content
      slot-styles()

    .content-row
      align-items flex-start
      display flex
      white-space nowrap
      width 340px

      .alert-icon
        height 30px
        margin-top 10px
        margin-right 15px
        white-space normal
        width 33px

        svg
          height 29px
          .alert-icon-fill
            fill mp-red
